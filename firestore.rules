rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuários podem ler/escrever apenas seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Agendamentos - cliente e profissional podem ver seus agendamentos
    match /agendamentos/{agendamentoId} {
      allow read, write: if request.auth != null && 
        (resource.data.clienteId == request.auth.uid || 
         resource.data.profissionalId == request.auth.uid);
      allow create: if request.auth != null;
    }
    
    // Planos - profissional pode criar/editar, todos podem ler
    match /planos/{planoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.data.profissionalId == request.auth.uid;
      allow create: if request.auth != null;
    }
  }
}